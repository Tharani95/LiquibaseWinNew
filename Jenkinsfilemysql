pipeline{
environment {
    DB_CREDS=credentials('db-credentials')
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url=jdbc:mysql://localhost:3306/my_app --changeLogFile=changelog.xml --username=$DB_CREDS_USR --password=$DB_CREDS_PSW'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url=jdbc:mysql://localhost:3306/my_app --changeLogFile=changelog.xml --username=$DB_CREDS_USR --password=$DB_CREDS_PSW'
      }
    }
    }
